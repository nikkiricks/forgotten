{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-unreachable": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "valid-typeof": "error",
    "no-unexpected-multiline": "error",
    "no-console": "warn"
  },
  "ignorePatterns": ["dist/", "build/", "node_modules/"]
}